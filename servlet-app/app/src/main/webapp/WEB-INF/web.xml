<?xml version="1.0" encoding="UTF-8"?>
<!-- XML 선언 -->


<!-- 규칙 -->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="false">   <!-- false일 경우 애노테이션도 사용가능 -->

  <display-name>서블릿 예제 애플리케이션</display-name>
  <description>
    Tomcat Documentation.
  </description>

  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/jsp/403.jsp</location>
  </error-page>



<display-name>My Web Application</display-name>

<description>애플리케이션 소개</description>


  <servlet>
    <servlet-name>Servlet01</servlet-name>
    <description>
      서블릿 설명
    </description>
    <servlet-class>com.eomcs.web.ex01.Servlet01</servlet-class>
  </servlet>




  <servlet-mapping>
    <servlet-name>Servlet01</servlet-name>
    <url-pattern>/ex01/first</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Servlet01</servlet-name>
    <url-pattern>/first</url-pattern>
  </servlet-mapping>




</web-app>